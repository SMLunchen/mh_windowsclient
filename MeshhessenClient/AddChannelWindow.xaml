<Window x:Class="MeshhessenClient.AddChannelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Kanal hinzufÃ¼gen"
        Width="450"
        Height="220"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="ChannelNameTextBox" Margin="0,6"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="PSK (Base64):"
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,6"/>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="PskTextBox" Margin="0,6"/>
                <Button Grid.Column="1" Content="Generieren"
                        Margin="6,6,0,6" Click="GeneratePsk_Click"/>
            </Grid>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0"
                    IsDefault="True" Click="OK_Click"/>
            <Button Content="Abbrechen" Width="100" IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
