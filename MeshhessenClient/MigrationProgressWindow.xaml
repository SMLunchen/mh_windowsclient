<Window x:Class="MeshhessenClient.MigrationProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Tiles werden migriert..."
        Width="450"
        Height="180"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <TextBlock Text="Die Tile-Ordnerstruktur wird aktualisiert..."
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <TextBlock TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,0,0,15">
            <Run Text="Bestehende OSM-Tiles werden in den neuen Ordner "/>
            <Run FontWeight="Bold" Text="maptiles/osm/"/>
            <Run Text=" verschoben. Dies kann bei vielen Tiles einen Moment dauern."/>
        </TextBlock>

        <ProgressBar x:Name="MigrationProgress"
                     Height="24"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,8"/>

        <TextBlock x:Name="StatusText"
                   Text=""
                   FontSize="12"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
