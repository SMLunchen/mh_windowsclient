<Window x:Class="MeshhessenClient.ZipImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Tiles aus Zip importieren..."
        Width="480"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <TextBlock x:Name="FileNameText"
                   Text="Importiere Tiles..."
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <TextBlock TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,0,0,15">
            <Run Text="Tiles werden in den entsprechenden Kartenordner extrahiert (osm, osmtopo oder osmdark)."/>
        </TextBlock>

        <ProgressBar x:Name="ImportProgress"
                     Height="24"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,8"/>

        <TextBlock x:Name="StatusText"
                   Text=""
                   FontSize="12"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
